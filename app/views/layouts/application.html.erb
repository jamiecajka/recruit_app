<!DOCTYPE html>
<html>
  <head>
    <title>RecruitApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <div class='sign_in_head'>
        <%= image_tag 'doane-logo.png', {class: 'logo-pic'} %>
        <% if user_signed_in? %>
          <div class="grid-container">
            <div class='grid-item'
              <p><%= link_to "Sign Out", destroy_user_session_path, {method: :delete, class: 'more_links'} %></p>
            </div>
            <div class='grid-item'>
              <p><%= link_to "Home", user_path(current_user), {class: 'more_links'} %></p>
            </div>
            <div class='grid-item'>
              <p><%= link_to "Back", :back, {class: 'more_links'} %></p>
            </div>
          </div>
        <% end %>
      </div>
    </header>
    <%= notice %>
    <%= alert %>
    <%= yield %>
  </body>
</html>
