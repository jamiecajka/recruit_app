<%= form_for @position do |f| %>
  <% if @position.errors.any? %>
    <div>
      <h2><%= pluralize(@position.errors.count, "error") %> prohibited this note from being saved:</h2>
      <ul>
        <% @position.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='wrapper'>
    <div class="row">
      <h1 class="form_header">Update Position</h1>
    </div>
    <div class="row">
      <%= f.label :name, 'Name', class: 'form-actions' %>
      <%= f.text_field :name, class: 'text_field' %>
    </div>
    <div class="form-actions">
      <%= f.button 'Update' %>
      <p><%= link_to "Delete Position", position_path(@position.id), data: { confirm: "Are you sure? Position item should only be deleted if it is a duplicate" }, method: :delete, :class => 'user_links' %> <br />
    </div>
  </div>
<% end %>
