<div class='wrapper'>
  <div class="row">
    <h1 class="form_header">Add a New Position</h1>
  </div>
  <%= form_for @position do |f| %>
    <div class="row">
      <%= f.label :name, 'Name', class: 'form-actions' %>
      <%= f.text_field :name, class: 'text_field' %>
    </div>
    <div class="form-actions">
      <%= f.button 'Submit' %>
    </div>
  <% end %>
</div>
